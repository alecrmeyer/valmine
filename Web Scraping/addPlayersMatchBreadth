from selenium import webdriver
from selenium.webdriver.common.keys import Keys
from valmine2 import *
from Player import *
from Match import *


import json



#Cloudflare blocked my previous attempt to curl by only allowing requests which could execute javascript (I believe)
driver = webdriver.Chrome('Tools/chromedriver')

name = input("name: ")
tag = input("tag: ")

#BFS for all users
def addPlayers(name, tag):
     
    player = Player(name, tag, driver)
    queue = []
    queue.append(player)

    while queue:
        player = queue.pop(0)
        players = get_all_players_from_all_matches(player)
        for player in players:
            try:

                name = player.split("#")[0]
                tag = player.split("#")[1]
                player = Player(name, tag, driver)
                queue.append(player)

                matches = player.getAllMatches()
                for match in matches:
                    import_data(False, match)
                print(name +"#"+ tag + " added")
            except IndexError as e:
                print(e)
                print("No teammates")    



def get_all_players_from_all_matches(player):
    players = []
    matches = player.getAllMatches()
    for match in matches:
        data = json.loads(match)
        for i in range(len(data["data"]["matches"])):         
            uid = data["data"]["matches"][i]["attributes"]["id"]
            match = Match(uid, driver)
            players = players + match.getAllPlayers()
    return players
        
addPlayers(name, tag)


driver.close()